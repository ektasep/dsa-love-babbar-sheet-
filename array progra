//UNION ARRAY
#include <iostream>
#include<algorithm>
#include <vector>
#include <queue>
#include <unordered_map>

using namespace std;

int main()
{

int n,m,i;
cout<<"enter the number you want to insert in first array";
cin>>n;
cout<<"enter the number you want ti insert in second array";
cin>>m;
int a[n],b[m];
unordered_map<int,int>map;
for(int i=0;i<n;i++)
{
    cout<<"enter the first array ";
    cin>>a[i];
    map[a[i]]++;
}
for(int i=0;i<m;i++)
{
    cout<<"enter the second array";
    cin>>b[i];
    map[b[i]]++;
}
cout<<"\ntotal size of the array";
cout<<map.size()<<endl;




    return 0;
}
//INERSECTION ARRAY

#include <iostream>


using namespace std;

int main()
{

int n,m,i;
cout<<"enter the number you want to insert in first array";
cin>>n;
cout<<"enter the number you want ti insert in second array";
cin>>m;
int a[n],b[m];

for(int i=0;i<n;i++)
{
    cout<<"enter the first array ";
    cin>>a[i];
    
}
for(int i=0;i<m;i++)
{
    cout<<"enter the second array";
    cin>>b[i];
    
}
for(int i=0;i<n;i++)
{
    for(int j=0;j<m;j++)
    {
        if(a[i]==b[j])
        {
            cout<<"\nintersection value is:";
            cout<<a[i]<<" ";
        }

    }
}
 
return 0;
}
#include <iostream>


using namespace std;

int main()
{

int n,m,i;
cout<<"enter the number you want to insert in first array";
cin>>n;
cout<<"enter the number you want ti insert in second array";
cin>>m;
int a[n],b[m];

for(int i=0;i<n;i++)
{
    cout<<"enter the first array ";
    cin>>a[i];
    
}
for(int i=0;i<m;i++)
{
    cout<<"enter the second array";
    cin>>b[i];
    
}
for(int i=0;i<n;i++)
{
    for(int j=0;j<m;j++)
    {
        if(a[i]==b[j])
        {
            cout<<"\nintersection value is:";
            cout<<a[i]<<" ";
        }

    }
}
 
return 0;
}
